# ===========================================
# Max to Telegram Bridge Configuration
# ===========================================

# ===== GREEN-API Settings (Max Messenger) =====
# Get these from https://green-api.com/ console
MAX_INSTANCE_ID=your_instance_id_here
MAX_API_TOKEN=your_api_token_here

# ===== Telegram Bot Settings =====
# Get bot token from @BotFather in Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ===== Direction Control Flags =====
# Enable/disable synchronization direction
# ВАЖНО: Можно включить только ОДНО направление!
# Включение обоих приведёт к бесконечному дублированию сообщений.
ENABLE_MAX_TO_TELEGRAM=true
ENABLE_TELEGRAM_TO_MAX=false

# ===== Max → Telegram Direction Settings =====
# Where to send messages from Max
TELEGRAM_CHANNEL_ID=@your_channel_name
# Or use numeric ID for private channels: -1001234567890

# Optional: Filter messages from specific Max chat only
# Format: numeric chatId from GREEN-API (e.g., 16958332 for personal, -69020002426896 for group)
# To get chatId, use GREEN-API method: https://green-api.com/en/docs/api/service/GetChats/
# Leave empty to forward from ALL Max chats
MAX_CHAT_ID=

# Optional: Webhook secret for GREEN-API authentication
WEBHOOK_SECRET=

# ===== Telegram → Max Direction Settings =====
# Where to send messages to in Max
# Format: numeric chatId from GREEN-API (e.g., 16958332 for personal, -69020002426896 for group)
# To get chatId, use GREEN-API method: https://green-api.com/en/docs/api/service/GetChats/
MAX_TARGET_CHAT_ID=-69020002426896

# Optional: Filter messages from specific Telegram chat only
# Use numeric chat ID (e.g., -1001234567890 for groups, 123456789 for users)
# Leave empty to forward from ALL Telegram chats
TELEGRAM_CHAT_ID=

# Telegram webhook URL (your public server address)
# Format: https://your-domain.com/telegram/webhook
# For local development with ngrok: https://abc123.ngrok.io/telegram/webhook
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook

# Optional: Secret token for Telegram webhook verification
# Recommended for security
TELEGRAM_WEBHOOK_SECRET=your-secret-token-123

# ===== Server Settings =====
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===========================================
# Configuration Examples
# ===========================================

# Example 1: Max → Telegram only (по умолчанию)
# ENABLE_MAX_TO_TELEGRAM=true
# ENABLE_TELEGRAM_TO_MAX=false
# TELEGRAM_CHANNEL_ID=@my_channel

# Example 2: Telegram → Max only
# ENABLE_MAX_TO_TELEGRAM=false
# ENABLE_TELEGRAM_TO_MAX=true
# MAX_TARGET_CHAT_ID=-69020002426896
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook

# Example 3: Filtered sync (specific chats only)
# MAX_CHAT_ID=16958332
# TELEGRAM_CHAT_ID=-1001234567890
# Only messages from these specific chats will be forwarded
